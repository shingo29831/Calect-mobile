{
  "extends": "@react-native/typescript-config",
  "compilerOptions": {
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",

    "strict": true,
    "noEmit": true,
    "skipLibCheck": true,

    "allowJs": false,
    "checkJs": false,

    "baseUrl": ".",
    "typeRoots": ["./src/@types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "src/@types/**/*.d.ts"],
  "exclude": [
    "node_modules",
    "ios",
    "android",
    "Pods",
    "**/*.js",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}
